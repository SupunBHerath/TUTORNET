class AboutPage {
    private name: string;
    private job: string;
    private location: string;
    private education: string;
    private mobile: string;
    private landline: string;
    private email: string;

    constructor(name: string, job: string, location: string, education: string, mobile: string, landline: string, email: string) {
        this.name = name;
        this.job = job;
        this.location = location;
        this.education = education;
        this.mobile = mobile;
        this.landline = landline;
        this.email = email;
    }

    render() {
        const aboutContainer = document.createElement('div');
        aboutContainer.classList.add('about-container');

        const aboutHeader = document.createElement('div');
        aboutHeader.classList.add('about-header');
        aboutHeader.innerHTML = `
            <h2>About</h2>
            <button class="edit-button">Edit</button>
        `;
        aboutContainer.appendChild(aboutHeader);

        const sections = [
            { iconClass: 'fas fa-user', label: 'Name', value: this.name },
            { iconClass: 'fas fa-briefcase', label: 'Job', value: this.job },
            { iconClass: 'fas fa-map-marker-alt', label: 'Location', value: this.location },
            { iconClass: 'fas fa-graduation-cap', label: 'Education', value: this.education },
            { iconClass: 'fas fa-mobile-alt', label: 'Mobile', value: this.mobile },
            { iconClass: 'fas fa-phone', label: 'Landline', value: this.landline },
            { iconClass: 'far fa-envelope', label: 'Email', value: this.email }
        ];

        sections.forEach(section => {
            const sectionDiv = document.createElement('div');
            sectionDiv.classList.add('about-section');
            sectionDiv.innerHTML = `
                <i class="${section.iconClass} icon"></i>
                <p><span class="label">${section.label}:</span> ${section.value}</p>
                <button class="edit-button">Edit</button>
            `;
            aboutContainer.appendChild(sectionDiv);
        });

        const saveButton = document.createElement('button');
        saveButton.classList.add('save-button');
        saveButton.textContent = 'Save';
        aboutContainer.appendChild(saveButton);

        document.body.appendChild(aboutContainer);
    }
}

const aboutPage = new AboutPage(
    'John Doe',
    'Web Developer',
    'New York, USA',
    'Studied at Example University',
    '+1234567890',
    '+9876543210',
    'example@gmail.com'
);
aboutPage.render();
